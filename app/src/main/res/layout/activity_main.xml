<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="resmayoung.example.com.relaxingrain.MainActivity"
    android:background="#bfbfbf">



    <Button android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rain1"
        android:text="Rainforest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1e824c"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignBottom="@+id/textView">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rain2"
        android:text="Rain on Roof"
        android:background="#019875"
        android:layout_below="@+id/rain1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rain3"
        android:text="Light Rain"
        android:background="#26a65b"
        android:layout_below="@+id/rain2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_alignBottom="@+id/textView3">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Thunderstorm"
        android:id="@+id/rain4"
        android:background="#00b16a"
        android:layout_below="@+id/rain3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_alignBottom="@+id/textView4">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Drizzle"
        android:id="@+id/rain5"
        android:allowUndo="false"
        android:background="#4daf7c"
        android:layout_below="@+id/rain4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_alignBottom="@+id/textView5">
    </Button>

    <TextView
        android:layout_width="45pt"
        android:layout_height="40pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/b">
    </TextView>

    <TextView
        android:layout_width="45pt"
        android:layout_height="40pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:background="@drawable/c"
        android:layout_below="@+id/rain1"
        android:layout_toRightOf="@+id/rain1"
        android:layout_toEndOf="@+id/rain1">
    </TextView>

    <TextView
        android:layout_width="45pt"
        android:layout_height="40pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:layout_below="@+id/rain2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="@drawable/d">
    </TextView>

    <TextView
        android:layout_width="45pt"
        android:layout_height="40pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:layout_below="@+id/rain3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:background="@drawable/a">
    </TextView>

    <TextView
        android:layout_width="45pt"
        android:layout_height="40pt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView5"
        android:layout_below="@+id/rain4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/e">
    </TextView>

</RelativeLayout>
</ScrollView>